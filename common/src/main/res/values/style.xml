<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!--设置背景透明-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--提示框是否有标题-->
        <item name="android:windowNoTitle">true</item>
        <!--提示框是否有边框-->
        <item name="android:windowFrame">@null</item>
        <!--提示框是否是浮动的，设置成false,不然软键盘会遮挡住EditText-->
        <item name="android:windowIsFloating">false</item>
        <!--提示框是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置出现方式-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--提示框是否是半透明的-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否允许对话框的背景变暗（模糊显示）。为true则允许变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--设置背景模糊的透明度-->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>


    <style name="dialog2" parent="AlertDialog.AppCompat.Light">
        <!--设置背景透明-->
        <item name="android:windowBackground">@color/transparent</item>
        <!--背景是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否浮在window上 设置成false,不然软键盘会遮挡住EditText-->
        <item name="android:windowIsFloating">false</item>
        <!--动画-->
        <!--        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>-->
        <!--        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>-->
        <!--是否背景模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--设置背景模糊的透明度-->
        <item name="android:backgroundDimAmount">0.6</item>
        <!--是否没有标题-->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_translucent" parent="dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--底部弹窗-->
    <style name="dialog_bottom" parent="dialog">
        <item name="android:windowAnimationStyle">@style/anim_bottom</item>
    </style>

    <style name="anim_bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>


    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>


    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:bottomBright">@color/white</item>
        <item name="android:bottomDark">@color/white</item>
        <item name="android:bottomMedium">@color/white</item>
        <item name="android:centerBright">@color/white</item>
        <item name="android:centerDark">@color/white</item>
        <item name="android:centerMedium">@color/white</item>
        <item name="android:fullBright">@color/yellow</item>
        <item name="android:fullDark">@color/yellow</item>
        <item name="android:topBright">@color/blue</item>
        <item name="android:topDark">@color/blue</item>
    </style>

</resources>